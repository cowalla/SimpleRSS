<form action="/users" method="post">
  <input type="hidden" 
		name="authenticity_token" 
		value="<%= form_authenticity_token %>">
  
  <label for="username">Username</label><br>
  <input id="username" 
		name="user[username]" 
		type="text"><br>

  <input type="submit" value="Submit" class='btn btn-primary'><br>
</form>